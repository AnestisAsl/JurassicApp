
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Dinosaur{
  id Int @id @default(autoincrement())
  name String
  height Int
  weight Int
  mesozoicEra String
  facts String
  fossil Fossil?
}

model Fossil {
  id Int @id @default(autoincrement())
  dinosaur Dinosaur @relation(fields: [dinosaurId],references:[id])
  dinosaurId Int
  location String
  date String
  paleontologists String
}